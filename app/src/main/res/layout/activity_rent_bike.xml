<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".RentBikeActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="191dp"
        android:layout_gravity="center"
        android:contentDescription="Bike 1"
        android:src="@drawable/trek_marlin5gen2_volmgf_m_0w" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="191dp"
        android:layout_gravity="center"
        android:contentDescription="Bike 2"
        app:srcCompat="@drawable/_1321_71_epic_ht_carb_rktred_hero_1200x800" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="260dp"
        android:layout_height="191dp"
        android:layout_gravity="center"
        android:contentDescription="Bike 3"
        app:srcCompat="@drawable/_90106_1915243_6" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent" />
</LinearLayout>